{
    "compilerOptions": {
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "esnext",
        "target": "es2022",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": ["DOM", "ES2022"],
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src/**/*.ts"]
}
